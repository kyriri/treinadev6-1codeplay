<%= form_for @course do |f| %>
  <div>
    <%= f.label :name, 'Nome' %><br>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :description, 'Descrição' %><br>
    <%= f.text_area :description %>
  </div>
  <div>
    <%= f.label :instructor_id, 'Professor' %><br>
    <%= f.collection_select :instructor_id, @instructors, :id, :display_name %>
  <%# TODO include_blank %>
  </div>
  <div>
    <%= f.label :code, 'Código' %><br>
    <%= f.text_field :code %>
  </div>
  <div>
    <%= f.label :price, 'Preço' %><br>
    <%= f.number_field :price %>
  </div>
  <div>
    <%= f.label :enrollment_deadline, 'Data limite de matrícula' %><br>
    <%= f.date_field :enrollment_deadline %>
  </div>
  <div>
    <%= f.submit 'Cadastrar curso' %>
  </div>
<% end %>

<%= link_to 'Voltar', courses_path %>
